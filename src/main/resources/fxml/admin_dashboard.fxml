<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storeapp.ui.AdminDashboardController">
    <top>
        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2196F3;">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
            <Label text="Admin Dashboard" textFill="WHITE">
                <font>
                    <Font size="20.0"/>
                </font>
            </Label>
        </HBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            
            <Label fx:id="welcomeLabel" text="Welcome" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            
            <Button fx:id="productsButton" text="Manage Products" onAction="#handleProducts" minWidth="200.0"/>
            <Button fx:id="salesButton" text="Manage Sales" onAction="#handleSales" minWidth="200.0"/>
            <Button fx:id="analyticsButton" text="View Analytics" onAction="#handleAnalytics" minWidth="200.0"/>
            <Button fx:id="usersButton" text="Manage Users" onAction="#handleUsers" minWidth="200.0"/>
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" minWidth="200.0"/>
        </VBox>
    </center>
</BorderPane>
