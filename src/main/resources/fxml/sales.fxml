<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storeapp.ui.SalesController">
    <top>
        <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #2196F3; -fx-padding: 10px;">
            <Button fx:id="backButton" text="â† Back" onAction="#handleBack" style="-fx-background-color: white; -fx-text-fill: #2196F3;"/>
            <Label text="Sales Management" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        </HBox>
    </top>
    
    <center>
        <TableView fx:id="salesTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0"/>
                <TableColumn fx:id="productIdColumn" text="Product ID" prefWidth="100.0"/>
                <TableColumn fx:id="productNameColumn" text="Product Name" prefWidth="150.0"/>
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100.0"/>
                <TableColumn fx:id="totalPriceColumn" text="Total Price" prefWidth="120.0"/>
                <TableColumn fx:id="saleDateColumn" text="Sale Date" prefWidth="180.0"/>
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="100.0"/>
            </columns>
        </TableView>
    </center>
    
    <bottom>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            
            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Product:"/>
                <ComboBox fx:id="productComboBox" prefWidth="200.0"/>
                <Label text="Quantity:"/>
                <TextField fx:id="quantityField" prefWidth="100.0"/>
                <Button fx:id="addSaleButton" text="Add Sale" onAction="#handleAddSale"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
