<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storeapp.ui.SalesController" style="-fx-background-color: #f8f9fa;">
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
                </padding>
                <Button fx:id="backButton" text="â† Back" onAction="#handleBack" style="-fx-background-color: rgba(255,255,255,0.95); -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-padding: 10px 20px;"/>
                <Label text="ðŸ’° Sales Management" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
            </padding>
            
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 15px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                <Label text="ðŸ” Filter Sales" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <Label text="From:" style="-fx-font-weight: 600;"/>
                    <DatePicker fx:id="fromDatePicker" promptText="Start Date" prefWidth="150.0"/>
                    <Label text="To:" style="-fx-font-weight: 600;"/>
                    <DatePicker fx:id="toDatePicker" promptText="End Date" prefWidth="150.0"/>
                    <Label text="Product:" style="-fx-font-weight: 600;"/>
                    <ComboBox fx:id="filterProductCombo" promptText="All Products" prefWidth="180.0"/>
                    <Button text="Apply Filter" onAction="#handleFilter" style="-fx-background-color: #3182ce; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px 15px;"/>
                    <Button text="Clear" onAction="#handleClearFilter" style="-fx-background-color: #718096; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px 15px;"/>
                </HBox>
            </VBox>
            
            <TableView fx:id="salesTable" style="-fx-background-radius: 12px;">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumn" text="Sale ID" prefWidth="80.0"/>
                    <TableColumn fx:id="productIdColumn" text="Product ID" prefWidth="100.0"/>
                    <TableColumn fx:id="productNameColumn" text="Product Name" prefWidth="180.0"/>
                    <TableColumn fx:id="quantityColumn" text="Qty" prefWidth="80.0"/>
                    <TableColumn fx:id="totalPriceColumn" text="Total Price" prefWidth="120.0"/>
                    <TableColumn fx:id="saleDateColumn" text="Sale Date &amp; Time" prefWidth="200.0"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="100.0"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    
    <bottom>
        <VBox spacing="20.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, -3); -fx-padding: 25px;">
            <padding>
                <Insets bottom="15.0" left="30.0" right="30.0" top="15.0"/>
            </padding>
            
            <Label text="Create New Sale" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
            
            <HBox spacing="20.0" alignment="CENTER_LEFT">
                <VBox spacing="8.0">
                    <Label text="Select Product" style="-fx-font-weight: 600;"/>
                    <ComboBox fx:id="productComboBox" prefWidth="280.0" style="-fx-min-height: 42px;"/>
                </VBox>
                
                <VBox spacing="8.0">
                    <Label text="Quantity" style="-fx-font-weight: 600;"/>
                    <TextField fx:id="quantityField" promptText="Enter quantity" prefWidth="150.0" style="-fx-min-height: 42px;"/>
                </VBox>
                
                <VBox spacing="8.0">
                    <Label text=" " style="-fx-font-weight: 600;"/>
                    <Button fx:id="addSaleButton" text="ðŸ’³ Process Sale" onAction="#handleAddSale" style="-fx-min-width: 180px; -fx-min-height: 42px; -fx-background-color: #48bb78; -fx-font-size: 15px;"/>
                </VBox>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
