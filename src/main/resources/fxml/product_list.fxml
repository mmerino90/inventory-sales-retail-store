<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storeapp.ui.ProductListController" style="-fx-background-color: #f8f9fa;">
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
                </padding>
                <Button fx:id="backButton" text="â† Back" onAction="#handleBack" style="-fx-background-color: rgba(255,255,255,0.95); -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-padding: 10px 20px;"/>
                <Label text="ðŸ“¦ Product Management" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
            </padding>
            
            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <Label text="ðŸ” Search:" style="-fx-font-size: 14px; -fx-font-weight: 600; -fx-text-fill: #2d3748;"/>
                <TextField fx:id="searchField" promptText="Search by name, category, or supplier..." HBox.hgrow="ALWAYS" style="-fx-min-width: 400px; -fx-pref-height: 35px;"/>
                <Label fx:id="lowStockWarning" text="" style="-fx-text-fill: #e53e3e; -fx-font-weight: bold; -fx-font-size: 14px;"/>
            </HBox>
            
            <TableView fx:id="productTable" style="-fx-background-radius: 12px;">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0"/>
                    <TableColumn fx:id="nameColumn" text="Product Name" prefWidth="180.0"/>
                    <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="220.0"/>
                    <TableColumn fx:id="priceColumn" text="Price" prefWidth="100.0"/>
                    <TableColumn fx:id="quantityColumn" text="Stock" prefWidth="100.0"/>
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150.0"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    
    <bottom>
        <VBox spacing="20.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, -3); -fx-padding: 25px;">
            <padding>
                <Insets bottom="15.0" left="30.0" right="30.0" top="15.0"/>
            </padding>
            
            <Label text="Product Details" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
            
            <GridPane hgap="15.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20.0"/>
                    <ColumnConstraints percentWidth="30.0"/>
                    <ColumnConstraints percentWidth="20.0"/>
                    <ColumnConstraints percentWidth="30.0"/>
                </columnConstraints>
                
                <Label text="Product Name" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: 600;"/>
                <TextField fx:id="nameField" promptText="Enter product name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="Price" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: 600;"/>
                <TextField fx:id="priceField" promptText="0.00" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                
                <Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: 600;"/>
                <TextField fx:id="descriptionField" promptText="Enter description" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                
                <Label text="Stock Quantity" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-font-weight: 600;"/>
                <TextField fx:id="quantityField" promptText="0" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                
                <Label text="Category" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: 600;"/>
                <TextField fx:id="categoryField" promptText="e.g., Electronics" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </GridPane>
            
            <HBox spacing="15.0" alignment="CENTER">
                <padding>
                    <Insets top="10.0"/>
                </padding>
                <Button fx:id="addButton" text="âž• Add Product" onAction="#handleAdd" style="-fx-min-width: 150px; -fx-min-height: 40px; -fx-background-color: #48bb78;"/>
                <Button fx:id="updateButton" text="âœï¸ Update Selected" onAction="#handleUpdate" style="-fx-min-width: 150px; -fx-min-height: 40px; -fx-background-color: #4299e1;"/>
                <Button fx:id="deleteButton" text="ðŸ—‘ï¸ Delete Selected" onAction="#handleDelete" style="-fx-min-width: 150px; -fx-min-height: 40px; -fx-background-color: #f56565;"/>
                <Button fx:id="clearButton" text="ðŸ”„ Clear Form" onAction="#handleClear" style="-fx-min-width: 150px; -fx-min-height: 40px; -fx-background-color: #718096;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
