<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storeapp.ui.ProductListController">
    <top>
        <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #2196F3; -fx-padding: 10px;">
            <Button fx:id="backButton" text="â† Back" onAction="#handleBack" style="-fx-background-color: white; -fx-text-fill: #2196F3;"/>
            <Label text="Product Management" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        </HBox>
    </top>
    
    <center>
        <TableView fx:id="productTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0"/>
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200.0"/>
                <TableColumn fx:id="priceColumn" text="Price" prefWidth="100.0"/>
                <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100.0"/>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150.0"/>
            </columns>
        </TableView>
    </center>
    
    <bottom>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            
            <HBox spacing="10.0">
                <TextField fx:id="nameField" promptText="Name" prefWidth="150.0"/>
                <TextField fx:id="descriptionField" promptText="Description" prefWidth="200.0"/>
                <TextField fx:id="priceField" promptText="Price" prefWidth="100.0"/>
                <TextField fx:id="quantityField" promptText="Quantity" prefWidth="100.0"/>
                <TextField fx:id="categoryField" promptText="Category" prefWidth="150.0"/>
            </HBox>
            
            <HBox spacing="10.0" alignment="CENTER">
                <Button fx:id="addButton" text="Add" onAction="#handleAdd"/>
                <Button fx:id="updateButton" text="Update" onAction="#handleUpdate"/>
                <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
