<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storeapp.ui.UserManagementController" style="-fx-background-color: #f8f9fa;">
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
                </padding>
                <Button fx:id="backButton" text="â† Back" onAction="#handleBack" style="-fx-background-color: rgba(255,255,255,0.95); -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-padding: 10px 20px;"/>
                <Label text="ðŸ‘¥ User Management" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
            </padding>
            
            <TableView fx:id="usersTable" style="-fx-background-radius: 12px;">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="300.0"/>
                    <TableColumn fx:id="roleColumn" text="Role" prefWidth="200.0"/>
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200.0"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    
    <bottom>
        <VBox spacing="20.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, -3); -fx-padding: 25px;">
            <padding>
                <Insets bottom="15.0" left="30.0" right="30.0" top="15.0"/>
            </padding>
            
            <Label text="User Details" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
            
            <GridPane hgap="20.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25.0"/>
                    <ColumnConstraints percentWidth="25.0"/>
                    <ColumnConstraints percentWidth="25.0"/>
                    <ColumnConstraints percentWidth="25.0"/>
                </columnConstraints>
                
                <VBox spacing="8.0" GridPane.columnIndex="0">
                    <Label text="Username" style="-fx-font-weight: 600;"/>
                    <TextField fx:id="usernameField" promptText="Enter username" style="-fx-min-height: 42px;"/>
                </VBox>
                
                <VBox spacing="8.0" GridPane.columnIndex="1">
                    <Label text="Password" style="-fx-font-weight: 600;"/>
                    <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-min-height: 42px;"/>
                </VBox>
                
                <VBox spacing="8.0" GridPane.columnIndex="2">
                    <Label text="Role" style="-fx-font-weight: 600;"/>
                    <ComboBox fx:id="roleComboBox" prefWidth="200.0" style="-fx-min-height: 42px;"/>
                </VBox>
                
                <VBox spacing="8.0" GridPane.columnIndex="3" alignment="BOTTOM_CENTER">
                    <HBox spacing="10.0" alignment="CENTER">
                        <Button fx:id="addUserButton" text="âž• Add User" onAction="#handleAddUser" style="-fx-min-width: 110px; -fx-min-height: 42px; -fx-background-color: #48bb78;"/>
                        <Button fx:id="clearButton" text="ðŸ”„ Clear" onAction="#handleClear" style="-fx-min-width: 90px; -fx-min-height: 42px; -fx-background-color: #718096;"/>
                    </HBox>
                </VBox>
            </GridPane>
        </VBox>
    </bottom>
</BorderPane>
