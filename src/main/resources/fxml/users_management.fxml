<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storeapp.ui.UserManagementController">
    <top>
        <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #2196F3; -fx-padding: 10px;">
            <Button fx:id="backButton" text="â† Back" onAction="#handleBack" style="-fx-background-color: white; -fx-text-fill: #2196F3;"/>
            <Label text="User Management" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        </HBox>
    </top>
    
    <center>
        <TableView fx:id="usersTable">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50.0"/>
                <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150.0"/>
                <TableColumn fx:id="roleColumn" text="Role" prefWidth="100.0"/>
                <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150.0"/>
            </columns>
        </TableView>
    </center>
    
    <bottom>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            
            <Label text="Add/Edit User" style="-fx-font-weight: bold;"/>
            
            <HBox spacing="10.0" alignment="CENTER">
                <Label text="Username:"/>
                <TextField fx:id="usernameField" prefWidth="150.0"/>
                <Label text="Password:"/>
                <PasswordField fx:id="passwordField" prefWidth="150.0"/>
                <Label text="Role:"/>
                <ComboBox fx:id="roleComboBox" prefWidth="120.0"/>
                <Button fx:id="addUserButton" text="Add User" onAction="#handleAddUser"/>
                <Button fx:id="clearButton" text="Clear" onAction="#handleClear"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
