<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="25.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.storeapp.ui.LoginController" style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2);">
    <padding>
        <Insets bottom="60.0" left="60.0" right="60.0" top="60.0"/>
    </padding>
    
    <!-- Login Card -->
    <VBox alignment="CENTER" spacing="25.0" style="-fx-background-color: white; -fx-background-radius: 20px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 5); -fx-padding: 50px;">
        
        <Label text="RETAIL STORE" styleClass="title">
            <font>
                <Font name="Consolas" size="36.0"/>
            </font>
        </Label>
        
        <Label text="MANAGEMENT SYSTEM" style="-fx-font-size: 22px; -fx-text-fill: #374151; -fx-font-weight: 600; -fx-font-family: 'Consolas', 'Courier New', monospace;">
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </Label>
        
        <Label text="AUTHENTICATE TO ACCESS SYSTEM" style="-fx-font-size: 14px; -fx-text-fill: #6b7280; -fx-font-family: 'Consolas', 'Courier New', monospace;">
            <padding>
                <Insets bottom="20.0"/>
            </padding>
        </Label>
        
        <VBox spacing="15.0" maxWidth="400.0" minWidth="400.0">
            <Label text="USERNAME" style="-fx-font-weight: 700; -fx-text-fill: #1f2937; -fx-font-family: 'Consolas', 'Courier New', monospace; -fx-font-size: 13px;"/>
            <TextField fx:id="usernameField" promptText="ENTER USERNAME" style="-fx-min-height: 50px; -fx-font-size: 15px;"/>
        </VBox>
        
        <VBox spacing="15.0" maxWidth="400.0" minWidth="400.0">
            <Label text="PASSWORD" style="-fx-font-weight: 700; -fx-text-fill: #1f2937; -fx-font-family: 'Consolas', 'Courier New', monospace; -fx-font-size: 13px;"/>
            <PasswordField fx:id="passwordField" promptText="ENTER PASSWORD" style="-fx-min-height: 50px; -fx-font-size: 15px;"/>
        </VBox>
        
        <Button fx:id="loginButton" text="[ LOGIN ]" onAction="#handleLogin" maxWidth="400.0" minWidth="400.0" style="-fx-min-height: 52px; -fx-font-size: 16px; -fx-font-weight: bold;">
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </Button>
        
        <Label fx:id="messageLabel" textFill="#e53e3e" style="-fx-font-size: 13px; -fx-font-weight: 600;"/>
        
    </VBox>
</VBox>
